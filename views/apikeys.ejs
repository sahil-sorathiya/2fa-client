<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Api</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="css/clientapi.css" />
  </head>
  <body>
    <div class="nav-bar">
      <h1 class="logo-name">Two-Factor Auth</h1>
      <div class="left-nav">
        <a href="/dashboard" class="link">Dashboard</a>
        <a href="/changepassword" class="link">Change Password</a>
        <button class="btn-nav logout-btn">
          <a href="/logout" class="link-btn">Logout</a>
        </button>
      </div>
    </div>
    <div class="container">
      <div class="name-bar">
        <h1><%= clientName%></h1>
      </div>
      <hr class="hr1" />
      <div class="wrapper">
        <h3>Your Api Key</h3>
        <hr class="hr2" />
        <form action="/addapi" method="get" id="add-api-form">
          <button type="submit" id="add-api">+ Add API</button>
          <% if(errorMessage){ %>
          <div class="errorMessage">
            <h5><%= errorMessage %></h5>
          </div>
          <% } %>
        </form>
        <div class="table">
          <table>
            <tr>
              <th style="width: 45%">Key</th>
              <th></th>
              <th>Created on</th>
            </tr>
            <% if(apiKey && generatedAt){ %>
            <tr>
              <form action="/deleteapi" method="get">
                <td>
                  <input
                    type="password"
                    name="password"
                    value="<%= apiKey%>"
                    id="api-text"
                    disabled
                  />
                  <i
                    style="margin: 3px"
                    class="bi bi-eye-slash"
                    id="togglePassword"
                  ></i>
                </td>
                <td style="width: 15%">
                  <button type="submit" id="delete-api">Delete</button>
                </td>
              </form>
              <td><%= generatedAt %></td>
            </tr>
            <script>
              const togglePassword = document.querySelector("#togglePassword");
              const apiText = document.querySelector("#api-text");
              togglePassword.addEventListener("click", function () {
                const type =
                  apiText.getAttribute("type") === "password"
                    ? "text"
                    : "password";
                apiText.setAttribute("type", type);
                this.classList.toggle("bi-eye");
              });
            </script>
            <% } %>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
